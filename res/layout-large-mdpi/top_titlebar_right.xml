<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout1">

    <View
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_title_bar_height"
        android:background="@color/header" />

    <TextView
        android:id="@+id/title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/top_title_bar_right"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/top_bar_button_margin" >

        <Button
            android:id="@+id/left_bar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_blue_tablet"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_bar_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/right_bar_button_layout1"
        android:layout_marginRight="@dimen/top_bar_button_margin"  >

        <Button
            android:id="@+id/right_bar_button_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_blue_tablet"
            android:text="Cancel"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/button_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_bar_button_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/top_bar_button_margin"  >

        <Button
            android:id="@+id/right_bar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_blue_tablet"
            android:text="Cancel"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/button_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">
        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/logo_height"
            android:src="@drawable/logo"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>