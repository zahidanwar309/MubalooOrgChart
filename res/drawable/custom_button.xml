<?xml version="1.0" encoding="utf-8"?>
<!-- SMALL SCREENS  -->
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/toolbar_dark"
                android:endColor="@color/toolbar_dark"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/toolbar_dark" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="@dimen/custom_button_padding"
                android:top="@dimen/custom_button_padding"
                android:right="@dimen/custom_button_padding"
                android:bottom="@dimen/custom_button_padding" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/toolbar_light"
                android:endColor="@color/toolbar_light"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/toolbar_light" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="@dimen/custom_button_padding"
                android:top="@dimen/custom_button_padding"
                android:right="@dimen/custom_button_padding"
                android:bottom="@dimen/custom_button_padding"/>
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="@color/toolbar_light"
                android:endColor="@color/toolbar_light"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/toolbar_dark" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="@dimen/custom_button_padding"
                android:top="@dimen/custom_button_padding"
                android:right="@dimen/custom_button_padding"
                android:bottom="@dimen/custom_button_padding" />
        </shape>
    </item>
        
</selector>